{
  "name": "apienvelope",
  "version": "1.0.0",
  "description": "Production-grade npm package for standardized API response formatting in Express applications",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "express",
    "api",
    "response",
    "formatter",
    "middleware",
    "typescript",
    "error-handling",
    "pagination",
    "envelope",
    "rest-api"
  ],
  "author": "Sepehr Mohseni <https://github.com/sepehr-mohseni>",
  "license": "MIT",
  "homepage": "https://github.com/sepehr-mohseni/apienvelope#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sepehr-mohseni/apienvelope.git"
  },
  "bugs": {
    "url": "https://github.com/sepehr-mohseni/apienvelope/issues"
  },
  "peerDependencies": {
    "express": "^4.0.0 || ^5.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.1.0",
    "express": "^4.18.2",
    "supertest": "^6.3.3",
    "@types/supertest": "^6.0.2",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
